pipeline {
    agent any

    stages {
        stage ('Build') {

            steps {
                withMaven(maven : 'Maven') {
                    bat 'mvn clean install'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'Maven') {
                    bat 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'Maven') {
                    bat 'mvn deploy'
                }
            }
        }
    }
}